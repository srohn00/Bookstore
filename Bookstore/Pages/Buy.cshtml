@page
@model Bookstore.Pages.BuyModel
@{
}
<!--cart page showing each book, quantity, subtotal per book and overall total
    also includes buttons to remove books from cart and continue shopping
    -->
<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
            
        </tr>
    </thead>
<tbody>
    @foreach (var line in Model.Cart.Lines)
    {
        <tr>
            <td class="text-left">@line.Book.Title</td>
            <td class="text-center">@line.Quantity</td>
            <td class="text-right">@line.Book.Price.ToString("c")</td>
            <td class="text-right">@((line.Quantity * line.Book.Price).ToString("c"))</td>
            <td class="text-center">
                <!--post data to session-->
                <form asp-page-handler="Remove" method="post">
                    <input type="hidden" name="BookID" value="@line.Book.BookID"/>
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</tbody>

<tfoot>
    <tr>
        <td colspan="3" class="text-right">Total:</td>
        <td class="text-right">@Model.Cart.ComputeTotalSum().ToString("c")</td>
    </tr>
</tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>